{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",
	"ignorePatterns": ["pnpm-*.yaml", "**/dist/**/*", "**/reports/**/*"],
	"printWidth": 80,
	"quoteProps": "consistent",
	"useTabs": true,
	"experimentalSortImports": {
		"order": "asc",
		"groups": [
			["builtin"],
			["external"],
			["internal", "subpath"],
			["parent"],
			["sibling", "index"],
			["type"]
		]
	}
}
