{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "es2023",
		"paths": { "#*": ["./src/*"] },
		"sourceMap": true,
		"types": ["audioworklet", "webaudioapi", "vitest/importMeta"]
	},
	"exclude": ["**/node_modules"],
	"include": ["./src", "./*.ts", "./*.js", "./*.cjs"]
}
