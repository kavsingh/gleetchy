{
	"extends": ["./packages/codestyle-js/tsconfig.json"],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"lib": ["esnext"],
		"module": "esnext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"noEmit": true,
		"target": "esnext"
	},
	"exclude": ["**/node_modules"],
	"include": ["./*.ts", "./*.*.cjs"]
}
