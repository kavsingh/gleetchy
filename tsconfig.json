{
	"extends": [
		"@tsconfig/node20/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],
	"compilerOptions": {
		"jsx": "react-jsx",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"noEmit": true,
		"paths": { "~/*": ["./src/*"] },
		"sourceMap": true,
		"types": ["node", "audioworklet", "webaudioapi", "vitest/importMeta"],
		// leave the following to eslint
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		// leave to eslint: some extensions delete
		// unreachable code detected via ts too eagerly
		"allowUnreachableCode": true
	},
	"exclude": ["**/node_modules"],
	"include": ["./src", "./scripts", "./*.ts"],
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			// "module": "commonjs",
			"lib": ["esnext"],
			"target": "es2022"
		}
	}
}
