{
	"extends": "@tsconfig/node18-strictest/tsconfig.json",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "@emotion/react",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"paths": { "~/*": ["./src/*"] },
		"plugins": [{ "name": "typescript-styled-plugin", "validate": false }],
		"sourceMap": true,
		"target": "esnext",
		"types": ["node", "audioworklet", "webaudioapi", "vitest/importMeta"]
	},
	"exclude": ["**/node_modules"],
	"include": ["./src", "./scripts", "./*.ts"],
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"isolatedModules": false,
			"module": "commonjs",
			"lib": ["esnext"],
			"target": "es2022"
		}
	}
}
