{
  "editor.formatOnSave": true,
  "eslint.enable": true,
  "stylelint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "files.watcherExclude": {
    "**/node_modules": true,
    "**/coverage/": true,
    "**/dist/": true,
    "**/distStatic/": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/coverage/": true,
    "**/dist/": true,
    "**/distStatic/": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
